@using Microsoft.AspNetCore.Identity
@using tjenamannen.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navlist ">
@if (SignInManager.IsSignedIn(User))
{
        <li class="header-nav-item navlist-vertical">
            <a id="manage" class="nav-link nav-text-small" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="header-nav-item navlist-vertical">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Rimmaskin", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
        <li class="header-nav-item navlist-vertical">
            <a class="nav-text-small" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>

        <li class="header-nav-item navlist-vertical">
            <a class="nav-text-small" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

</ul>